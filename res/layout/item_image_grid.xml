<?xml version="1.0" encoding="utf-8"?>
<com.akki.khitkchat.ui.widget.SquareImageFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    android:textColor="#ffffff"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/iv_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_image"
        android:contentDescription="@string/image__cd__image_preview"
        android:scaleType="centerCrop"
        android:transitionName="@string/id_transition_image" />

</com.akki.khitkchat.ui.widget.SquareImageFrameLayout>
